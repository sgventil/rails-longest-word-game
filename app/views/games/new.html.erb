<div class="container">
  <h1 class="m-3 text-center">New game</h1>

  <div class="game">
    <div class="letters m-3">
      <% @letters.each do |letter| %>
      <div class="letter-box">
        <%= letter.upcase %>
      </div>
      <% end %>
    </div>
    <div class="form">
      <form action="score" method="post" data-turbo="false">
      <label for="word">Whats the Longest Word You Can Find?</label>
      <div>
      <input id="word" name="word" type="text" placeholder="Longest Word">
      <input type="submit">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
      </div>
      </form>
    </div>
  </div>
</div>
